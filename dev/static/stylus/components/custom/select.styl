.select-gl
	width max-content
	&--icon
		.select-gl
			&__list
				border-color
			&__this
			&__value
				padding 0 30px 0 10px
				justify-content flex-start
				background white
				font-weight 300
				color gray
				border-color gray
			&__item
				font-weight 300
			&__drop
				right 10px
			&__icon
				size(15px)
				fill gray
				margin-right 7px
	&__this
		position relative
	&__value
		position relative
		padding 0 15px 0 0
		width: 140px;
		height: 34px;
		border: 1px solid #B0B0B0;
		border-radius: 50px;
		display flex
		justify-content center
		align-items center
		color #525252
		font-weight 600
		background transparent
	&__drop
		size(10px)
		fill #525252
		position absolute
		right 15px
		top 14px
		transition()
	&__list
		overflow hidden
		display none
		width 140px
		position absolute
		top calc(100% + 2px)
		left 0
		border: 1px solid #B0B0B0;
		border-radius 15px
		background white
		z-index 15
	&__item
		padding 0 25px
		width 100%
		height 30px
		display flex
		justify-content flex-start
		align-items center
		font-weight 600
		cursor pointer
		transition()
	.icons-js
		svg
			size(15px)
			fill gray
			margin-right 7px
			transition()
	.selected
		background-color #30379E;
		color white
		svg
			fill white
	.select__active
		.select-gl__drop
			transform rotate(-180deg)