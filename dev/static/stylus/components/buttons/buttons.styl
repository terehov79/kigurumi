.btn_global
	width: 175px;
	height: 50px;
	background: linear-gradient(116.77deg, #FFFFFF -20.86%, rgba(255, 255, 255, 0) 85.62%), #F56814;
	background-blend-mode: overlay, normal;
	box-shadow: 0px 1px 10px rgba(0, 0, 0, 0.25);
	border-radius: 189px;
	font-weight: bold;
	font-size: 23px;
	line-height: 30px;
	color: #FFFFFF;
	border none
	transition transition

.basket_btn, .exit_btn, .more_btn
	size(49px)
	border-radius 50%
	border: 2px solid #4A50CC;
.basket_btn
	background: #FFFFFF;
.exit_btn
	background: #373CBE;
.more_btn
	background: #30379E;
	border none
	font-size 30px
	color white
	position relative
	transform translateY(20px)

.want_btn
	position relative
	&__img
		position absolute
		top -20px
		right -20px

.swiper-prev_btn, .swiper-next_btn
	width: 41px;
	height: 41px;
	border-radius 50%;
	border none
	svg
		size(15px)
		fill #FFFFFF
.swiper-prev_btn
	background: #3D41B1;
	margin-right: 10px;
	svg
		transform rotate(90deg)
.swiper-next_btn
	background: linear-gradient(116.77deg, #FFFFFF -20.86%, rgba(255, 255, 255, 0) 85.62%), #F56814;
	background-blend-mode: overlay, normal;
	svg
		transform rotate(-90deg)

.adult_btn, .child_btn
	margin 0 10px
	width: 150px;
	height: 27px;
	font-size: 13px;
	line-height: 17px;
.adult_btn
	background: linear-gradient(116.77deg, #FFFFFF -20.86%, rgba(255, 255, 255, 0) 85.62%), #F56814!important
	color #FFFFFF!important
.child_btn
	background #ffffff
	color #000000

.buy_btn
	height: 33px;
	width: 120px;
	svg
		size(18	px)
		fill #FFFFFF
		margin-bottom 4px

.add_btn
	width: 35px;
	height: 34px;
	margin-left 10px
	background #FFFFFF
	border: 1px solid #B0B0B0;
	box-sizing: border-box;
	border-radius: 50px;
	line-height 1
	font-size: 30px;
	color: #B0B0B0;
	padding 0 0 7px
	display: flex;
	justify-content center
	align-items center
	span
		height: auto;

.subs-vk
	width 100%
	height: 34px;
	background #597da3
	border none
	color white
	font-size 18px
	font-weight bold
	svg
		size(24px)
		fill white
		margin 0 10px 3px 0

.subs-inst
	width: 128px;
	height: 27px;
	border-radius: 4px;
	background: #009AF1;
	font-weight: 500;
	font-size: 14px;
	line-height: 18px;
	text-align: center;
	color: #FFFFFF;
	border none

.logo_btn
	size(33px)
	border-radius 50%
	background-color transparent
	border: 2px solid #FFF;
	display flex
	justify-content: center;
	align-items: center;
	margin 0 5px
	svg
		size(18px)
		fill #FFF