.top-product
  width 100%
  &--wrap
    width 100%
    background-color #30379E;
  &__main
    width 100%
    padding: 0 50px;
    background: #F7F7F7;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    border-radius: 38px;
    transform translateY(-50px)
    z-index 10
    position relative
  &__btn
    padding 25px 0 50px
    display flex
    justify-content: center;
    align-items: center;
  &__box:not(:first-child)
    display none
  &__box-main
    display flex
    justify-content: center;
    flex-wrap wrap
    .row
      width 100%
  &__foot
    text-align center
    font-weight: bold;
    line-height: 36px;
    text-transform: uppercase;
    color: #FFFFFF;

.card
  width: 100%;
  padding: 20px 0;
  margin-bottom: 50px;
  border-radius: 30px;
  background: #FFFFFF;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  display flex
  flex-direction column
  justify-content: center;
  align-items center
  &:hover
    box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.5);
  &__image
    width 100%
    display flex
    justify-content: center;
    align-items center
  span.text_18
    font-weight: bold;
    line-height: 23px;
    color: #454545;
    margin 10px 0

.sale
  position relative
  &::before
    content "SALE"
    position absolute
    height: 27px;
    width: 74px;
    border-radius: 4px;
    background: #009AF1;
    box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.15);
    top 5%
    right 7%
    font-weight: bold;
    font-size: 18px;
    line-height: 23px;
    text-align: center;
    color: #FFFFFF;
    padding-top: 2px;
  .buy_btn
    margin-right 80px
    position relative
    &::after
      content attr(data-full-price)
      font-weight: 500;
      font-size: 18px;
      line-height: 23px;
      text-decoration-line: line-through;
      color: #B0B0B0;
      position: absolute;
      top 10%
      right -60%


.head-wave
  text-align center
  padding: 25px 0 25px;
  h2.text_28
    font-weight: bold;
    line-height: 36px;
    text-transform: uppercase;
    color: #30379E;
    position relative
    &::after
      content ""
      position absolute
      top 120%
      left 50%
      transform translateX(-50%)
      width: 168px;
      height: 8px;
      background-image: url("../img/svg/wave.svg");
      background-size contain
      background-repeat no-repeat